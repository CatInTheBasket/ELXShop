
<html>
    <body>
        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Action</th>                
            </tr>
            
            <% if(result){ %>
                <tr>
                    <td><%= result.id %></td>
                    <td><%= result.title %></td>
                    <td><%= result.price %></td>
                    <td><%= result.stock %></td>
                    <td><%= result.category %></td>
                    <td><img src="<%= '/img/'+result.imageURL %>"></img></td>
                    <% if(role=="customer"){ %>
                    <td><button onclick="location.href='/products/<%= result.id %>/buy'">Tambahkan ke Keranjang</button></td>
                    <% } %>
                </tr>
            <% } %>
        </table>
    </body>
</html>